<?xml version="1.0" encoding="GBK"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  metadata-complete="true" version="2.5">

  <listener>
    <listener-class>com.shawn.geektime.homework.user.listener.JNDIApplicationContextListener
    </listener-class>
  </listener>

  <listener>
    <listener-class>com.shawn.geektime.homework.user.listener.TestingListener
    </listener-class>
  </listener>

  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>CharsetEncodingFilter</filter-name>
    <filter-class>com.shawn.geektime.homework.web.mvc.filter.CharsetEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>

  <servlet>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>com.shawn.geektime.homework.web.mvc.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <!-- JNDI javax.naming.Name -->
    <res-ref-name>jdbc/UserPlatformDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
